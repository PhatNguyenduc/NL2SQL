# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Or for MySQL: mysql+pymysql://user:password@localhost:3306/dbname

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
# Cache TTL in seconds
CACHE_TTL_SCHEMA=3600     # Schema cache: 1 hour
CACHE_TTL_PROMPT=1800     # Prompt cache: 30 minutes
CACHE_TTL_SQL=600         # SQL cache: 10 minutes
CACHE_SEMANTIC_THRESHOLD=0.85  # Similarity threshold for semantic cache

# Embedding Configuration for Semantic Cache
# Provider: openai, sentence_transformers, gemini, none
# Default: auto-detect (uses OpenAI if OPENAI_API_KEY exists, else sentence_transformers)
EMBEDDING_PROVIDER=sentence_transformers
# Model options:
# - OpenAI: text-embedding-3-small (default), text-embedding-3-large
# - Sentence Transformers: all-MiniLM-L6-v2 (default), paraphrase-multilingual-MiniLM-L12-v2
# - Gemini: text-embedding-004
EMBEDDING_MODEL=all-MiniLM-L6-v2
# Optional: Reduce embedding dimensions (only for text-embedding-3-*)
# EMBEDDING_DIMENSIONS=512

# Optional Settings
DEFAULT_LIMIT=100
ENABLE_CACHING=true
LOG_LEVEL=INFO
