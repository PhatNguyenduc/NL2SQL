# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Or for MySQL: mysql+pymysql://user:password@localhost:3306/dbname

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
# Cache TTL in seconds
CACHE_TTL_SCHEMA=3600     # Schema cache: 1 hour
CACHE_TTL_PROMPT=1800     # Prompt cache: 30 minutes
CACHE_TTL_SQL=600         # SQL cache: 10 minutes
CACHE_SEMANTIC_THRESHOLD=0.85  # Similarity threshold for semantic cache

# Embedding Configuration for Semantic Cache
# Provider: openai, gemini, none (sentence_transformers requires extra install)
# Uses same OPENAI_API_KEY as LLM - no extra cost setup
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
# Optional: Reduce embedding dimensions to save memory (256, 512, 1024)
# EMBEDDING_DIMENSIONS=512

# Optional Settings
DEFAULT_LIMIT=100
ENABLE_CACHING=true
LOG_LEVEL=INFO
